<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
        android:id="@+id/linearProfile"
        style="@style/groupStylewhite_A700"
        android:layout_width="match_parent"
        android:layout_height="600sp"
         android:layout_marginTop="@dimen/_55sp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_ellipse1"></ImageView>

        <TextView
            android:id="@+id/txtJohnSmith"
            style="@style/txtHelveticaNowTextmedium20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_27pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/lbl_john_smith" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEditProfile"
            style="@style/btnRoundedOutline"
            android:layout_width="@dimen/_185pxh"
            android:layout_height="@dimen/_51pxv"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_26pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_13pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_13pxv"
            android:singleLine="true"
            android:text="@string/lbl_edit_profile"
            android:textAllCaps="false" />

        <LinearLayout
            android:id="@+id/linearNavigatebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_58pxv"
            android:gravity="end"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearColumnthumbsup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_27pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_weight="0.37"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageThumbsup"
                    android:layout_width="@dimen/_21pxh"
                    android:layout_height="@dimen/_15pxh"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_marginEnd="@dimen/_36pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_thumbsup" />

                <TextView
                    android:id="@+id/txtOrders"
                    style="@style/txtHelveticaNowTextregular12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_marginEnd="@dimen/_27pxh"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/lbl_orders"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/lineRectangle198"
                android:layout_width="0dp"
                android:layout_height="@dimen/_31pxv"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_marginBottom="@dimen/_7pxv"
                android:layout_weight="0.01"
                android:background="@color/bluegray_100" />

            <LinearLayout
                android:id="@+id/linearColumnsettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_33pxh"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_weight="0.15"
                android:gravity="start"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageSettings"
                    android:layout_width="@dimen/_19pxh"
                    android:layout_height="@dimen/_16pxh"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_3pxh"
                    android:layout_marginEnd="@dimen/_3pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_settings" />

                <TextView
                    android:id="@+id/txtPass"
                    style="@style/txtHelveticaNowTextregular12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11pxv"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_pass"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/lineRectangle199"
                android:layout_width="0dp"
                android:layout_height="@dimen/_31pxv"
                android:layout_marginStart="@dimen/_33pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_marginBottom="@dimen/_7pxv"
                android:layout_weight="0.01"
                android:background="@color/bluegray_100" />

            <LinearLayout
                android:id="@+id/linearColumncalendar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_28pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_weight="0.21"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageCalendar"
                    android:layout_width="@dimen/_18pxh"
                    android:layout_height="@dimen/_19pxh"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_9pxh"
                    android:layout_marginEnd="@dimen/_9pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_order" />

                <TextView
                    android:id="@+id/txtEvents"
                    style="@style/txtHelveticaNowTextregular12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="Hàng"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/lineRectangle200"
                android:layout_width="0dp"
                android:layout_height="@dimen/_31pxv"
                android:layout_marginStart="@dimen/_28pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_marginBottom="@dimen/_7pxv"
                android:layout_weight="0.01"
                android:background="@color/bluegray_100" />

            <LinearLayout
                android:id="@+id/linearColumnsearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_2pxv"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_weight="0.25"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageSearch"
                    android:layout_width="@dimen/_19pxh"
                    android:layout_height="@dimen/_19pxh"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/_12pxh"
                    android:layout_marginEnd="@dimen/_12pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_search"
               />

                <TextView
                    android:id="@+id/txtSettingsOne"
                    style="@style/txtHelveticaNowTextregular12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11pxv"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:singleLine="true"
                    android:text="@string/lbl_settings"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/viewDivider"
            android:layout_width="@dimen/_375pxh"
            android:layout_height="@dimen/_8pxv"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_26pxv"
            android:background="@color/gray_100" />

        <LinearLayout
            android:id="@+id/linearRowinbox"
            style="@style/groupStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginEnd="@dimen/_24pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearColumninbox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30pxv"
                android:layout_marginBottom="@dimen/_26pxv"
                android:layout_weight="0.99"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtInbox"
                    style="@style/txtHelveticaNowTextmedium16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_inbox" />

                <TextView
                    android:id="@+id/txtViewmessage"
                    style="@style/txtHelveticaNowTextregular12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@string/lbl_view_message"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageArrowright"
                android:layout_width="@dimen/_4pxh"
                android:layout_height="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_46pxv"
                android:layout_marginEnd="@dimen/_4pxh"
                android:layout_marginBottom="@dimen/_46pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowyournikemembe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24pxh"
            android:layout_marginTop="@dimen/_33pxv"
            android:layout_marginEnd="@dimen/_24pxh"
            android:gravity="start"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btnLogout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.99"
                android:gravity="start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtYourNikeMembe"
                    style="@style/txtHelveticaNowTextmedium16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Đăng xuất" />

                <TextView
                    android:id="@+id/txtAvailableCounter"
                    style="@style/txtHelveticaNowTextregular12_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Thoát đăng nhập"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageArrowrightOne"
                android:layout_width="@dimen/_4pxh"
                android:layout_height="@dimen/_8pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_marginBottom="@dimen/_14pxv"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft" />
        </LinearLayout>

        <View
            android:id="@+id/viewDividerOne"
            android:layout_width="@dimen/_375pxh"
            android:layout_height="@dimen/_8pxv"
            android:layout_gravity="start"
            android:layout_marginTop="@dimen/_32pxv"
            android:background="@color/gray_100" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMemberSinceMay2022"
            style="@style/btnSolid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_202pxv"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_19pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_19pxv"
            android:singleLine="true"
            android:text="@string/msg_member_since_ma"
            android:textAllCaps="false" />

    </LinearLayout>


    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sp"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
